label node-boot
        MENU LABEL Boot
        MENU INDENT 1
        kernel @NODEBASEURL@/vmlinuz
        initrd @NODEBASEURL@/initrd.img
        APPEND root=live:@NODEBASEURL@/rootfs.squashfs.img rhgb quiet rd.live.fsimg=1
        TEXT HELP
             Selecting this entry will boot the live image of
             oVirt Node (x86_64).
             Note: This requires at least 2GB of RAM.
        ENDTEXT

